<h2>NEW POST</h2>

<% @posts.each do |post| %>
  <p>
    <%= post.name %><br>
    <%= image_tag post.image.url %>
  </p>
<% end %>

<%= form_for :post, url: 'posts/create'  do |f| %>
<br>
<p><%= f.text_field :title, placeholder: 'TITLE' %></p>
<p><%= f.text_area :text, placeholder: 'TEXT' %></p>
<p><%=f.label "UPLOAD" %><br><%= f.file_field :image %></p>
<p><%= f.submit value: 'POST' %></p>
<% end %>